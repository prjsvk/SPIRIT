{
  "manifest_version": 3,
  "name": "Spirit Focus - Website Blocker",
  "description": "Block distracting websites to stay focused on your spirit webpage.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Spirit Focus"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "alarms"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.instagram.com/*",
    "*://*.tiktok.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.snapchat.com/*"
  ]
  ,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
